{
  "name": "comprehensive-testing-platform-backend",
  "version": "1.0.0",
  "description": "Comprehensive Testing Platform Backend - Cloudflare Workers",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "code-quality": "npm run lint && npm run type-check",
    "pre-commit": "npm run code-quality"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^4.43.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "keywords": [
    "cloudflare-workers",
    "hono",
    "typescript",
    "testing-platform",
    "api"
  ],
  "author": "Comprehensive Testing Platform Team",
  "license": "MIT"
}


